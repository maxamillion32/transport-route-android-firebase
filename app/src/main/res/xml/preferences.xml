<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/settings_server_address_default"
        android:inputType="text"
        android:key="@string/settings_server_address_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_server_address_label"/>

    <EditTextPreference
        android:defaultValue="@string/settings_server_port_default"
        android:inputType="number"
        android:key="@string/settings_server_port_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_server_port_label"/>
</PreferenceScreen>